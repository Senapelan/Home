    <!-- Main JavaScript -->
    <script>
        // ============================================
        // KONFIGURASI
        // ============================================
        
        // URL API Google Apps Script (akan diisi oleh user)
        let API_URL = '';
        
        // Variabel global
        let anggotaCounter = 0;
        let keluargaData = {};
        let isEditMode = false;
        let existingKKData = null;
        let kepalaKeluargaData = {};
        
        // Data dropdown
        const dropdownData = {
            agama: ['Islam', 'Kristen Protestan', 'Kristen Katolik', 'Hindu', 'Buddha', 'Konghucu', 'Lainnya'],
            pendidikan: ['Tidak Sekolah', 'SD/Sederajat', 'SMP/Sederajat', 'SMA/Sederajat', 'D1/D2/D3', 'S1/D4', 'S2', 'S3'],
            pekerjaan: [
                'Tidak Bekerja', 'Pelajar/Mahasiswa', 'PNS', 'TNI/Polri', 'Pegawai Swasta', 
                'Wiraswasta', 'Petani', 'Nelayan', 'Pensiunan', 'Ibu Rumah Tangga', 'Lainnya'
            ],
            golonganDarah: ['-', 'A', 'B', 'AB', 'O'],
            hubunganKeluarga: [
                'Kepala Keluarga', 'Istri', 'Anak', 'Menantu', 'Cucu', 
                'Orang Tua', 'Mertua', 'Famili Lain', 'Lainnya'
            ],
            statusPerkawinan: ['Belum Kawin', 'Kawin', 'Cerai Hidup', 'Cerai Mati'],
            kewarganegaraan: ['WNI', 'WNA'],
            statusAnggota: ['Aktif', 'Meninggal', 'Pindah', 'Tidak Aktif'],
            statusKekayaan: ['-', 'Mampu', 'Tidak Mampu'],
            statusLPS: ['-', 'Peserta LPS', 'Peserta Subsidi Silang', 'Peserta DLHK', 'Tidak Ikut LPS', 'Belum Terdata'],
            statusKesehatan: ['-', 'Memiliki BPJS', 'Memiliki BPJS dan BPJS Tenaga Kerja', 'Tidak memiliki BPJS'],
            sumberData: ['Sensus', 'Registrasi', 'Survei', 'Lainnya']
        };
        
        // ============================================
        // INISIALISASI
        // ============================================
        
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Aplikasi dimuat');
            
            // Set tanggal input hari ini
            document.getElementById('tanggalInput').value = new Date().toISOString().split('T')[0];
            
            // Load konfigurasi dari localStorage
            loadConfig();
            
            // Setup event listeners
            setupEventListeners();
            
            // Test koneksi otomatis jika API URL ada
            if (API_URL) {
                testConnection();
            }
        });
        
        function setupEventListeners() {
            // Enter untuk search
            document.getElementById('noKKSearch').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') checkKK();
            });
            
            // API URL input
            document.getElementById('apiUrl').addEventListener('input', function(e) {
                API_URL = e.target.value.trim();
            });
        }
        
        // ============================================
        // FUNGSI KONFIGURASI
        // ============================================
        
        function loadConfig() {
            const savedUrl = localStorage.getItem('penduduk_api_url');
            if (savedUrl) {
                API_URL = savedUrl;
                document.getElementById('apiUrl').value = savedUrl;
            }
        }
        
        function saveConfig() {
            const apiUrl = document.getElementById('apiUrl').value.trim();
            
            if (!apiUrl) {
                showNotification('Masukkan URL API terlebih dahulu', 'error');
                return;
            }
            
            if (!apiUrl.includes('script.google.com')) {
                showNotification('URL harus berupa Google Apps Script Web App', 'warning');
                return;
            }
            
            API_URL = apiUrl;
            localStorage.setItem('penduduk_api_url', apiUrl);
            showNotification('Konfigurasi disimpan', 'success');
            
            // Test koneksi setelah menyimpan
            testConnection();
        }
        
        async function testConnection() {
            if (!API_URL) {
                showNotification('Masukkan URL API terlebih dahulu', 'error');
                return;
            }
            
            showLoading(true);
            
            try {
                // Test dengan request GET sederhana
                const response = await fetch(API_URL, {
                    method: 'GET',
                    mode: 'no-cors' // Mode no-cors untuk menghindari CORS issue
                });
                
                // Update status indicator
                const statusElement = document.getElementById('apiStatus');
                statusElement.className = 'api-status connected';
                statusElement.innerHTML = '<i class="fas fa-check-circle"></i> <span>Terhubung ke API</span>';
                
                showNotification('Koneksi API berhasil', 'success');
                
            } catch (error) {
                console.error('Koneksi gagal:', error);
                
                const statusElement = document.getElementById('apiStatus');
                statusElement.className = 'api-status disconnected';
                statusElement.innerHTML = '<i class="fas fa-times-circle"></i> <span>Gagal terhubung ke API</span>';
                
                showNotification('Gagal terhubung ke API: ' + error.message, 'error');
            } finally {
                showLoading(false);
            }
        }
        
        // ============================================
        // FUNGSI UTILITAS
        // ============================================
        
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : type === 'error' ? 'fa-exclamation-circle' : 'fa-exclamation-triangle'}"></i>
                ${message}
            `;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.classList.add('show');
            }, 10);
            
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 400);
            }, 3000);
        }
        
        function showLoading(show) {
            document.getElementById('loading').style.display = show ? 'flex' : 'none';
        }
        
        // ============================================
        // FUNGSI API CALL
        // ============================================
        
        async function callAPI(endpoint, data = {}) {
            if (!API_URL) {
                showNotification('Silakan konfigurasi URL API terlebih dahulu', 'error');
                return null;
            }
            
            try {
                showLoading(true);
                
                // Menggunakan JSONP atau POST untuk menghindari CORS
                const formData = new FormData();
                formData.append('action', endpoint);
                formData.append('data', JSON.stringify(data));
                
                // Gunakan fetch dengan mode 'no-cors' atau proxy jika perlu
                const response = await fetch(API_URL, {
                    method: 'POST',
                    mode: 'no-cors',
                    body: formData
                });
                
                // Karena mode no-cors, kita tidak bisa membaca response
                // Alternatif: Gunakan Google Apps Script Content Service
                return await callAPIAlternative(endpoint, data);
                
            } catch (error) {
                console.error('API call error:', error);
                showNotification('Gagal menghubungi API: ' + error.message, 'error');
                return null;
            } finally {
                showLoading(false);
            }
        }
        
        // Alternatif: Menggunakan iframe atau form submission
        async function callAPIAlternative(endpoint, data) {
            return new Promise((resolve) => {
                // Buat form tersembunyi
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = API_URL;
                form.target = 'api_iframe';
                form.style.display = 'none';
                
                // Tambahkan input untuk endpoint
                const actionInput = document.createElement('input');
                actionInput.type = 'hidden';
                actionInput.name = 'action';
                actionInput.value = endpoint;
                form.appendChild(actionInput);
                
                // Tambahkan input untuk data
                const dataInput = document.createElement('input');
                dataInput.type = 'hidden';
                dataInput.name = 'data';
                dataInput.value = JSON.stringify(data);
                form.appendChild(dataInput);
                
                // Buat iframe untuk menerima response
                let iframe = document.getElementById('api_iframe');
                if (!iframe) {
                    iframe = document.createElement('iframe');
                    iframe.name = 'api_iframe';
                    iframe.id = 'api_iframe';
                    iframe.style.display = 'none';
                    document.body.appendChild(iframe);
                }
                
                // Setup callback untuk menerima response
                iframe.onload = function() {
                    try {
                        // Coba baca response dari iframe
                        const iframeDoc = iframe.contentDocument || iframe.contentWindow.document;
                        const responseText = iframeDoc.body.textContent;
                        
                        if (responseText) {
                            const response = JSON.parse(responseText);
                            resolve(response);
                        } else {
                            resolve({ success: false, message: 'Tidak ada response' });
                        }
                    } catch (e) {
                        console.error('Error parsing response:', e);
                        resolve({ success: false, message: 'Error parsing response' });
                    }
                    
                    // Hapus form
                    document.body.removeChild(form);
                };
                
                document.body.appendChild(form);
                form.submit();
            });
        }
        
        // Metode terbaik: Menggunakan JSONP untuk GET requests
        async function callAPIJsonp(endpoint, data) {
            return new Promise((resolve, reject) => {
                // Buat callback function
                const callbackName = 'jsonp_callback_' + Date.now();
                window[callbackName] = function(response) {
                    delete window[callbackName];
                    document.body.removeChild(script);
                    resolve(response);
                };
                
                // Buat URL dengan callback
                const url = `${API_URL}?action=${endpoint}&data=${encodeURIComponent(JSON.stringify(data))}&callback=${callbackName}`;
                
                // Buat script tag
                const script = document.createElement('script');
                script.src = url;
                script.onerror = reject;
                document.body.appendChild(script);
            });
        }
        
        // ============================================
        // FUNGSI UTAMA APLIKASI
        // ============================================
        
        async function checkKK() {
            const noKK = document.getElementById('noKKSearch').value.trim();
            
            if (!noKK) {
                showNotification('Harap masukkan Nomor KK', 'error');
                return;
            }
            
            if (noKK.length !== 16) {
                showNotification('Nomor KK harus 16 digit', 'error');
                return;
            }
            
            // Periksa API URL
            if (!API_URL) {
                showNotification('Silakan konfigurasi URL API terlebih dahulu', 'error');
                return;
            }
            
            showLoading(true);
            
            try {
                // Gunakan metode JSONP untuk GET request
                const response = await callAPIJsonp('cekKK', { noKK: noKK });
                
                if (response && response.success) {
                    if (response.exists) {
                        // Data ditemukan, tampilkan data
                        existingKKData = response.data;
                        isEditMode = false;
                        tampilkanDataKeluarga(response.data);
                    } else {
                        // Data tidak ditemukan, buka mode input
                        isEditMode = false;
                        keluargaData = {
                            No_KK: noKK,
                            anggota: []
                        };
                        
                        document.getElementById('petugasInputSection').classList.remove('hidden');
                        document.getElementById('dataSection').classList.remove('hidden');
                        document.getElementById('viewDataSection').classList.add('hidden');
                        
                        tambahAnggota(true); // Tambah anggota pertama (Kepala Keluarga)
                        showNotification('Nomor KK belum terdaftar. Silakan input data baru.', 'warning');
                    }
                } else {
                    showNotification(response?.message || 'Gagal memeriksa data', 'error');
                }
                
            } catch (error) {
                console.error('Error checking KK:', error);
                showNotification('Terjadi kesalahan: ' + error.message, 'error');
            } finally {
                showLoading(false);
            }
        }
        
        // Fungsi-fungsi lainnya tetap sama seperti sebelumnya...
        // (tambahAnggota, toggleAnggota, updateHubunganKeluarga, dll.)
        
        // Karena keterbatasan ruang, saya akan berikan fungsi-fungsi kunci saja
        
        function tambahAnggota(isKepalaKeluarga = false) {
            if (anggotaCounter >= 10) {
                showNotification('Maksimal 10 anggota keluarga', 'warning');
                return;
            }
            
            anggotaCounter++;
            const anggotaNumber = anggotaCounter;
            
            // Generate Kode Keluarga jika belum ada
            if (!keluargaData.Kode_Keluarga && anggotaNumber === 1) {
                keluargaData.Kode_Keluarga = 'KK' + Date.now().toString().slice(-6);
            }
            
            // Buat card anggota (sama seperti sebelumnya, disederhanakan)
            const anggotaCard = document.createElement('div');
            anggotaCard.className = 'member-card active';
            anggotaCard.id = `anggota-${anggotaNumber}`;
            anggotaCard.innerHTML = `
                <div class="member-header" onclick="toggleAnggota(${anggotaNumber})">
                    <div class="member-title">
                        <span class="member-number">${anggotaNumber}</span>
                        <span>Anggota Keluarga ${anggotaNumber}</span>
                        <span class="status-indicator status-aktif">Aktif</span>
                    </div>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="member-content" id="content-${anggotaNumber}">
                    <!-- Form fields sama seperti sebelumnya -->
                    <div class="form-section">
                        <h3 class="section-title"><i class="fas fa-home"></i> Alamat Keluarga</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                <label class="required">Alamat</label>
                                <input type="text" id="alamat-${anggotaNumber}" class="address-field" ${anggotaNumber > 1 ? 'readonly' : ''}>
                            </div>
                            <!-- Field lainnya... -->
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('anggotaContainer').appendChild(anggotaCard);
            
            if (isKepalaKeluarga) {
                document.getElementById(`hubunganKeluarga-${anggotaNumber}`).value = 'Kepala Keluarga';
                document.getElementById(`hubunganKeluarga-${anggotaNumber}`).disabled = true;
                
                kepalaKeluargaData = {
                    id: anggotaNumber,
                    nama: '',
                    jenisKelamin: ''
                };
            }
            
            document.getElementById('tambahAnggotaSection').classList.remove('hidden');
            
            if (anggotaNumber === 1) {
                setTimeout(() => {
                    toggleAnggota(1);
                }, 300);
            }
        }
        
        async function simpanSemua() {
            // Validasi petugas input
            const petugas = document.getElementById('petugasInput').value;
            if (!petugas) {
                showNotification('Harap pilih Petugas Input', 'error');
                return;
            }
            
            // Kumpulkan data dari semua anggota
            const anggotaData = [];
            
            for (let i = 1; i <= anggotaCounter; i++) {
                const data = getAnggotaData(i);
                if (!data) {
                    showNotification(`Data anggota ${i} belum lengkap`, 'error');
                    return;
                }
                anggotaData.push(data);
            }
            
            // Siapkan data untuk API
            const dataToSave = {
                Kode_Keluarga: keluargaData.Kode_Keluarga,
                No_KK: keluargaData.No_KK,
                anggota: anggotaData,
                petugas: petugas,
                tanggalInput: document.getElementById('tanggalInput').value || new Date().toISOString().split('T')[0]
            };
            
            showLoading(true);
            
            try {
                // Panggil API untuk menyimpan data
                const response = await callAPIJsonp('simpanData', dataToSave);
                
                if (response && response.success) {
                    showNotification('Data berhasil disimpan!', 'success');
                    
                    // Reset form setelah 2 detik
                    setTimeout(() => {
                        resetForm();
                    }, 2000);
                } else {
                    showNotification('Gagal menyimpan data: ' + (response?.message || 'Unknown error'), 'error');
                }
                
            } catch (error) {
                console.error('Error saving data:', error);
                showNotification('Terjadi kesalahan: ' + error.message, 'error');
            } finally {
                showLoading(false);
            }
        }
        
        function getAnggotaData(anggotaNumber) {
            // Validasi dan kumpulkan data (sama seperti sebelumnya)
            // ...
            return {
                ID_Anggota: anggotaNumber.toString().padStart(2, '0'),
